# Drone CI Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to git!

# GitHub OAuth Application (create at https://github.com/settings/developers)
DRONE_GITHUB_CLIENT_ID=your_github_oauth_client_id_here
DRONE_GITHUB_CLIENT_SECRET=your_github_oauth_client_secret_here

# RPC Secret (generate with: openssl rand -hex 16)
DRONE_RPC_SECRET=your_secure_rpc_secret_here

# Server Configuration
DRONE_SERVER_HOST=agus-server.duckdns.org
DRONE_SERVER_PROTO=http

# Admin User (your GitHub username)
DRONE_ADMIN_USERNAME=agustin-zarate
